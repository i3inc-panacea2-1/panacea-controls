<Window x:Class="Panacea.Controls.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panacea.Controls"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="600" Width="800"
        Loaded="Window_Loaded"
        Background="red"
        WindowStyle="None"
        WindowState="Maximized"
        AllowsTransparency="True"
        Opacity="0"
        Name="Main"
        >
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Duration="00:00:00.200" Storyboard.TargetProperty="Opacity" From="0" To="1" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid DataContext="{Binding ElementName=Main}">
        <local:SplashScreenControl ImageColor="{Binding ImageColor}" Text="{Binding Text}" ImageData="{Binding ImageData}">
        </local:SplashScreenControl>
    </Grid>
</Window>
