<Window
    x:Class="Panacea.Controls.SplashScreenWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Panacea.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="Main"
    Title="LoadingWindow"
    Width="800"
    Height="600"
    AllowsTransparency="True"
    Background="red"
    Loaded="Window_Loaded"
    Opacity="0"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        Storyboard.TargetProperty="Opacity"
                        From="0"
                        To="1"
                        Duration="00:00:00.200" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid DataContext="{Binding ElementName=Main}">
        <local:SplashScreenControl
            ImageColor="{Binding ImageColor}"
            ImageData="{Binding ImageData}"
            Text="{Binding Text}" />
    </Grid>
</Window>
