<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Panacea.Controls.Styles"
    xmlns:controls="clr-namespace:Panacea.Controls">

    <controls:MultiplyConverter x:Key="multiplyConverter"/>
    <Style x:Key="{x:Type TextBox}" TargetType="TextBoxBase">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="MinHeight" Value="20" />
        <Setter Property="AllowDrop" Value="true" />
        <Setter Property="Padding" Value="0 5"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBoxBase}">
                    <Border
                        Name="Border"
                        Padding="{TemplateBinding Padding}"
                        Background="Transparent"
                       
                        BorderThickness="0"
                        CornerRadius="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <ScrollViewer Grid.Row="1" x:Name="PART_ContentHost" Margin="0" />
                            <TextBlock 
                                Grid.Row="0"
                                Name="Label"
                                Text="{Binding Path=(controls:TextboxProperties.Label), RelativeSource={RelativeSource TemplatedParent}}"
                                VerticalAlignment="Center"
                                Margin="0">
                                <TextBlock.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform x:Name="TranslateTransform">
                                            <TranslateTransform.Y>

                                                <MultiBinding Converter="{StaticResource multiplyConverter}">
                                                    <Binding Path="ActualHeight" ElementName="PART_ContentHost"/>
                                                    <Binding Path="Width" ElementName="Tag" />
                                                </MultiBinding>

                                            </TranslateTransform.Y>
                                        </TranslateTransform>
                                        <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                                    </TransformGroup>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <Border Visibility="Collapsed" Name="Tag" Width="0"/>
                            <Border
                                Grid.Row="2"
                                BorderBrush="#eeeeee"
                                BorderThickness="0,0,0,2"/>
                            <Border
                                Grid.Row="2"
                                Name="HighlightBorder"
                                BorderBrush="{DynamicResource ColorPrimary}"
                                BorderThickness="0,0,0,2"
                                Margin="50 0"
                                Opacity="0"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource DisabledBackgroundBrush}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource DisabledBackgroundBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource DisabledForegroundBrush}" />
                        </Trigger>
                        <EventTrigger RoutedEvent="GotFocus">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation 
                                        Storyboard.TargetName="HighlightBorder"
                                        Storyboard.TargetProperty="Margin"
                                        To="0 0 0 0"
                                        Duration="0:0:0.2" />
                                    <DoubleAnimation
                                        Storyboard.TargetName="HighlightBorder"
                                        Storyboard.TargetProperty="Opacity"
                                        To="1"
                                        Duration="0:0:0.2"/>
                                    <DoubleAnimation
                                        Storyboard.TargetName="Tag"
                                        Storyboard.TargetProperty="Width"
                                        From="1"
                                        To=".35"
                                        Duration="0:0:0.2"/>
                                    <DoubleAnimation
                                        Storyboard.TargetName="ScaleTransform"
                                        Storyboard.TargetProperty="ScaleY"
                                        To=".7"
                                        Duration="0:0:0.1"/>
                                    <DoubleAnimation
                                        Storyboard.TargetName="ScaleTransform"
                                        Storyboard.TargetProperty="ScaleX"
                                        To=".7"
                                        Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="LostFocus" >
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation 
                                        Storyboard.TargetName="HighlightBorder"
                                        Storyboard.TargetProperty="Margin"
                                        To="50 0"
                                        Duration="0:0:0.2" />
                                    <DoubleAnimation
                                        Storyboard.TargetName="HighlightBorder"
                                        Storyboard.TargetProperty="Opacity"
                                        To="0"
                                        Duration="0:0:0.2"/>
                                    <DoubleAnimation
                                        Storyboard.TargetName="Tag"
                                        Storyboard.TargetProperty="Width"
                                        From=".35"
                                        To="1"
                                        Duration="0:0:0.2"/>
                                    <DoubleAnimation
                                        Storyboard.TargetName="ScaleTransform"
                                        Storyboard.TargetProperty="ScaleY"
                                        To="1"
                                        Duration="0:0:0.1"/>
                                    <DoubleAnimation
                                        Storyboard.TargetName="ScaleTransform"
                                        Storyboard.TargetProperty="ScaleX"
                                        To="1"
                                        Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>