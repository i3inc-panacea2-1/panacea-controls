<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Panacea.Controls">
    <Style TargetType="{x:Type local:PagerControl}">
        <Setter Property="Background" Value="{DynamicResource ColorPrimary}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PagerControl}">
                    <Border
                        HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalAlignment}"
                        Background="Transparent"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Button
                                VerticalAlignment="Center"
                                local:Material.Icon="ic_skip_previous"
                                Command="{TemplateBinding PreviousCommand}"
                                Foreground="{TemplateBinding Background}">
                                Previous
                            </Button>
                            <ItemsControl Grid.Column="1" ItemsSource="{TemplateBinding LeftPart}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            VerticalAlignment="Center"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType=local:PagerControl}, Path=ChangePageCommand}"
                                            CommandParameter="{Binding}"
                                            Content="{Binding}"
                                            Foreground="{Binding RelativeSource={RelativeSource AncestorType=local:PagerControl}, Path=Background}"
                                            Style="{DynamicResource OutlinedButton}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>

                            <Button
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Background="{TemplateBinding Background}"
                                Content="{TemplateBinding CurrentPage}"
                                Style="{DynamicResource PrimaryButton}" />


                            <ItemsControl Grid.Column="3" ItemsSource="{TemplateBinding RightPart}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            VerticalAlignment="Center"
                                            Command="{Binding RelativeSource={RelativeSource AncestorType=local:PagerControl}, Path=ChangePageCommand}"
                                            CommandParameter="{Binding}"
                                            Content="{Binding}"
                                            Foreground="{Binding RelativeSource={RelativeSource AncestorType=local:PagerControl}, Path=Background}"
                                            Style="{DynamicResource OutlinedButton}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                            <Button
                                Grid.Column="4"
                                Margin="1"
                                VerticalAlignment="Center"
                                local:Material.Icon="ic_skip_next"
                                Command="{TemplateBinding NextCommand}"
                                Foreground="{TemplateBinding Background}">
                                Next
                            </Button>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>