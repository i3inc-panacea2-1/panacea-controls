<local:DialogBaseWindow
    x:Class="Panacea.Controls.DialogBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Panacea.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Main"
    AllowsTransparency="True"
    Loaded="Main_Loaded"
    Unloaded="Main_Unloaded"
    Opacity="1"
    Background="#66000000"
    mc:Ignorable="d">

    <Border DataContext="{Binding ElementName=Main}" VerticalAlignment="Center" HorizontalAlignment="Center" MinHeight="100" MinWidth="200" 
            Background="White" BorderBrush="White" 
            BorderThickness="0" 
            CornerRadius="4">
        <Grid HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                    Margin="10"
                    FontSize="24"
                    Text="{Binding Title}" />
            <TextBlock
                    Grid.Row="1"
                    Margin="10"
                    Text="{Binding Text}" />
            <Button Grid.Row="2" Click="Close_Click">Close</Button>
        </Grid>
    </Border>

</local:DialogBaseWindow>
